<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/phone_back_gradient"
    tools:context=".LoginRegSetupModule.Otp_handler">

    <ProgressBar
        android:id="@+id/progressBar2_otp_Handler"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/dummy_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification Code"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the verification code \nsent to your phone"
        android:textColor="#000"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:textSize="14sp"/>
    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:padding="3dp"
        app:height="65dp"
        app:otp_box_background="@color/transparent"
        android:scaleX="1"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:length="6"
        android:layout_gravity="center"
        app:otp_text_size="24dp"/>

    <ir.samanjafari.easycountdowntimer.EasyCountDownTextview
        android:id="@+id/easyCountDownTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:second="60"
        app:showHours="false"
        app:textSize="24sp"
        app:textColor="#000"
        app:digitBackground="#005F93A8"
        app:setAnimation="true"
        app:showOnlySecond="true"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:text="Verify"
        android:textColor="#fff"
        android:background="#000"
        android:id="@+id/verifyBtn"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="18sp"
        android:text="If The Code Does Not Appear Please Go back Use Other Method "/>


</LinearLayout>